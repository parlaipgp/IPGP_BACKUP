
###  Add path of mpich manually ########"

cmake -DCMAKE_INSTALL_PREFIX=/home/rajesh/SCOTCH/scotch-v7.0.4/scotch-install -DCMAKE_BUILD_TYPE=Release -DMPI_C_COMPILER=/home/rajesh/MPICH/mpich-4.2.0/mpich-install/bin/mpicc -DMPI_CXX_COMPILER=/home/rajesh/MPICH/mpich-4.2.0/mpich-install/bin/mpicxx  -DMPI_C_INCLUDE_PATH=/home/rajesh/MPICH/mpich-4.2.0/mpich-install/include -DMPIEXEC_EXECUTABLE=/home/rajesh/MPICH/mpich-4.2.0/mpich-install/bin/mpiexec


#### with openmpi
cmake -DCMAKE_INSTALL_PREFIX=/home/rajesh/SCOTCH/scotch-v7.0.4/scotch-install -DCMAKE_BUILD_TYPE=Release -DMPI_C_COMPILER=/home/rajesh/OPENMPI/openmpi-5.0.2/openmpi-install/bin/mpicc -DMPI_CXX_COMPILER=/home/rajesh/OPENMPI/openmpi-5.0.2/openmpi-install/bin/mpicxx  -DMPI_C_INCLUDE_PATH=/home/rajesh/OPENMPI/openmpi-5.0.2/openmpi-install/include -DMPIEXEC_EXECUTABLE=/home/rajesh/OPENMPI/openmpi-5.0.2/openmpi-install/bin/mpiexec

cmake -DCMAKE_INSTALL_PREFIX=/usr/soft/scotch-v7.0.4/scotch-install \
      -DCMAKE_BUILD_TYPE=Release \
      -DMPI_C_COMPILER=/usr/soft/openmpi-4.0.2/openmpi-install/bin/mpicc \
      -DMPI_CXX_COMPILER=/usr/soft/openmpi-4.0.2/openmpi-install/bin/mpicxx \
      -DMPI_C_INCLUDE_PATH=/usr/soft/openmpi-4.0.2/openmpi-install/include \
      -DMPIEXEC_EXECUTABLE=/usr/soft/openmpi-4.0.2/openmpi-install/bin/mpiexec \
      .

